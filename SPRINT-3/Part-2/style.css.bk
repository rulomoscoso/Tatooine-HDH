  text-decoration: none:
}
footer{
  grid-row: 3;
  grid-column: 1 / nav 3;
}
nav ul li {
  display: inline-block;
  padding: 15px;
  margin-right: 20px;
  list-style: none;
}
header nav a:link, a:visited{
  text-decoration: none;
  color: black;
  background-color: #cd6839;
  padding: 10px 20px;
  border-radius: 5px;
}
header nav a:hover{
  background-color: #a0522d;
}
